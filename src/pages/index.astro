---
import BaseLayout from '../layouts/BaseLayout.astro';
import ContactForm from '../components/ContactForm.astro';
---

<BaseLayout title="Home">
  <!-- Hero Section -->
  <section class="relative min-h-screen hero-gradient pt-20 pb-24 md:pb-32 overflow-hidden">
    <!-- Background decorations - refined with layered gradients -->
    <div class="absolute inset-0 overflow-hidden pointer-events-none">
      <div class="absolute top-20 left-10 w-72 h-72 bg-primary-200 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-float"></div>
      <div class="absolute top-40 right-10 w-96 h-96 bg-accent-100 rounded-full mix-blend-multiply filter blur-3xl opacity-30 animate-float-delayed"></div>
      <div class="absolute bottom-20 left-1/3 w-80 h-80 bg-primary-100 rounded-full mix-blend-multiply filter blur-3xl opacity-20 animate-float-slow"></div>
    </div>

    <div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 pt-16 md:pt-24 lg:pt-32">
      <div class="grid lg:grid-cols-2 gap-12 lg:gap-20 items-center">
        <!-- Left content -->
        <div class="text-center lg:text-left">
          <!-- Badge -->
          <div class="inline-flex items-center px-4 py-2 bg-white/90 backdrop-blur-sm rounded-full shadow-stripe-xs border border-gray-100/50 mb-6 reveal">
            <span class="w-2 h-2 bg-green-500 rounded-full mr-2 animate-pulse"></span>
            <span class="text-sm font-medium text-gray-700">Your neighbors on Haverhill Road are already using it</span>
          </div>

          <h1 class="text-display-sm md:text-display leading-tight mb-6 reveal">
            <span class="text-gray-900">Built for</span><br>
            <span class="gradient-text">Century Village</span>
          </h1>

          <p class="text-body-lg text-gray-600 max-w-xl mx-auto lg:mx-0 mb-8 reveal">
            The only COA management platform designed specifically for the <strong class="text-gray-900 font-semibold">309 associations</strong> of Century Village, West Palm Beach—with office hours right here in the community.
          </p>

          <!-- CTA Buttons -->
          <div class="flex flex-col sm:flex-row items-center justify-center lg:justify-start gap-4 mb-12 reveal">
            <a href="#demo" class="w-full sm:w-auto px-8 py-4 bg-primary-600 text-white font-semibold rounded-full hover:bg-primary-700 transition-all duration-150 ease-stripe shadow-stripe-md hover:shadow-stripe-lg btn-shine text-center">
              Schedule Your Demo
            </a>
            <a href="#how-it-works" class="w-full sm:w-auto px-8 py-4 bg-white text-gray-700 font-semibold rounded-full hover:bg-gray-50 transition-all duration-150 ease-stripe border border-gray-200 hover:border-gray-300 shadow-stripe-xs hover:shadow-stripe-sm flex items-center justify-center gap-2">
              <svg class="w-5 h-5 text-primary-600" fill="currentColor" viewBox="0 0 20 20">
                <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM9.555 7.168A1 1 0 008 8v4a1 1 0 001.555.832l3-2a1 1 0 000-1.664l-3-2z" clip-rule="evenodd"/>
              </svg>
              See How It Works
            </a>
          </div>

          <!-- Stats -->
          <div class="grid grid-cols-3 gap-6 pt-8 mt-4 reveal">
            <div class="text-center lg:text-left">
              <div class="stat-number counter">309</div>
              <div class="text-sm text-gray-500 font-medium">Associations</div>
            </div>
            <div class="text-center lg:text-left">
              <div class="stat-number counter">355</div>
              <div class="text-sm text-gray-500 font-medium">Buildings</div>
            </div>
            <div class="text-center lg:text-left">
              <div class="stat-number counter">7,854</div>
              <div class="text-sm text-gray-500 font-medium">Units</div>
            </div>
          </div>
        </div>

        <!-- Right content - Dashboard mockup -->
        <div class="relative reveal hidden lg:block">
          <div class="relative">
            <!-- Main dashboard card -->
            <div class="glass rounded-3xl p-6 shadow-stripe-2xl">
              <div class="flex items-center justify-between mb-6">
                <div class="flex items-center space-x-3">
                  <div class="w-10 h-10 bg-gradient-to-br from-primary-600 to-accent-200 rounded-xl"></div>
                  <div>
                    <div class="font-semibold text-gray-900">Building Dashboard</div>
                    <div class="text-sm text-gray-500">Century Village Unit 247</div>
                  </div>
                </div>
                <div class="flex space-x-2">
                  <div class="w-3 h-3 bg-red-400 rounded-full"></div>
                  <div class="w-3 h-3 bg-yellow-400 rounded-full"></div>
                  <div class="w-3 h-3 bg-green-400 rounded-full"></div>
                </div>
              </div>

              <!-- Mini cards -->
              <div class="grid grid-cols-2 gap-4 mb-6">
                <div class="bg-gradient-to-br from-primary-50 to-white p-4 rounded-2xl border border-primary-100">
                  <div class="text-2xl font-bold text-primary-600">24</div>
                  <div class="text-sm text-gray-600">Unit Owners</div>
                </div>
                <div class="bg-gradient-to-br from-green-50 to-white p-4 rounded-2xl border border-green-100">
                  <div class="text-2xl font-bold text-green-600">98%</div>
                  <div class="text-sm text-gray-600">Compliance</div>
                </div>
              </div>

              <!-- Activity list -->
              <div class="space-y-3">
                <div class="flex items-center space-x-3 p-3 bg-white/50 rounded-xl">
                  <div class="w-8 h-8 bg-blue-100 rounded-lg flex items-center justify-center">
                    <svg class="w-4 h-4 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/>
                    </svg>
                  </div>
                  <div class="flex-1">
                    <div class="text-sm font-medium text-gray-900">Budget Report Uploaded</div>
                    <div class="text-xs text-gray-500">2 minutes ago</div>
                  </div>
                </div>
                <div class="flex items-center space-x-3 p-3 bg-white/50 rounded-xl">
                  <div class="w-8 h-8 bg-green-100 rounded-lg flex items-center justify-center">
                    <svg class="w-4 h-4 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                    </svg>
                  </div>
                  <div class="flex-1">
                    <div class="text-sm font-medium text-gray-900">Meeting Minutes Approved</div>
                    <div class="text-xs text-gray-500">1 hour ago</div>
                  </div>
                </div>
                <div class="flex items-center space-x-3 p-3 bg-white/50 rounded-xl">
                  <div class="w-8 h-8 bg-purple-100 rounded-lg flex items-center justify-center">
                    <svg class="w-4 h-4 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 17h5l-1.405-1.405A2.032 2.032 0 0118 14.158V11a6.002 6.002 0 00-4-5.659V5a2 2 0 10-4 0v.341C7.67 6.165 6 8.388 6 11v3.159c0 .538-.214 1.055-.595 1.436L4 17h5m6 0v1a3 3 0 11-6 0v-1m6 0H9"/>
                    </svg>
                  </div>
                  <div class="flex-1">
                    <div class="text-sm font-medium text-gray-900">Maintenance Request #127</div>
                    <div class="text-xs text-gray-500">3 hours ago</div>
                  </div>
                </div>
              </div>
            </div>

            <!-- Floating notification card -->
            <div class="absolute -top-4 -right-4 glass rounded-2xl p-4 shadow-stripe-lg animate-float">
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-green-100 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"/>
                  </svg>
                </div>
                <div>
                  <div class="text-sm font-semibold text-gray-900">All Documents Synced</div>
                  <div class="text-xs text-gray-500">Just now</div>
                </div>
              </div>
            </div>

            <!-- Floating stats card -->
            <div class="absolute -bottom-6 -left-6 glass rounded-2xl p-4 shadow-stripe-lg animate-float-delayed">
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-primary-100 rounded-full flex items-center justify-center">
                  <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"/>
                  </svg>
                </div>
                <div>
                  <div class="text-sm font-semibold text-gray-900">Hundreds of CV Residents</div>
                  <div class="text-xs text-gray-500">Already have access</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll indicator -->
    <div class="absolute bottom-8 left-1/2 transform -translate-x-1/2 animate-bounce">
      <svg class="w-6 h-6 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"/>
      </svg>
    </div>
  </section>

  <!-- Pain Points Section -->
  <section class="py-24 md:py-32 lg:py-40 bg-white relative overflow-hidden">
    <div class="container-wide">
      <div class="text-center max-w-3xl mx-auto mb-20 reveal">
        <h2 class="text-heading-1-sm md:text-heading-1 mb-6 text-balance">
          Managing a Century Village Association is <span class="gradient-text">Different</span>
        </h2>
        <p class="text-body-lg text-gray-600">
          With 355 buildings dating back to the 1970s, you face challenges that generic software just doesn't understand.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 reveal-stagger">
        <div class="group p-8 rounded-3xl bg-white border border-gray-100 hover:border-primary-200 shadow-stripe-xs hover:shadow-stripe-lg transition-all duration-150 ease-stripe card-hover reveal">
          <div class="w-14 h-14 bg-red-100 rounded-2xl flex items-center justify-center mb-6 feature-icon">
            <svg class="w-7 h-7 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-4.03 8-9 8a9.863 9.863 0 01-4.255-.949L3 20l1.395-3.72C3.512 15.042 3 13.574 3 12c0-4.418 4.03-8 9-8s9 3.582 9 8z"/>
            </svg>
          </div>
          <h3 class="text-heading-3 mb-3 text-gray-900">Communication Overload</h3>
          <p class="text-body text-gray-600">
            Coordinating with dozens of unit owners across multiple buildings. Emails get lost, notices go unread, and important updates never reach everyone.
          </p>
        </div>

        <div class="group p-8 rounded-3xl bg-white border border-gray-100 hover:border-primary-200 shadow-stripe-xs hover:shadow-stripe-lg transition-all duration-150 ease-stripe card-hover reveal">
          <div class="w-14 h-14 bg-orange-100 rounded-2xl flex items-center justify-center mb-6 feature-icon">
            <svg class="w-7 h-7 text-orange-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"/>
            </svg>
          </div>
          <h3 class="text-heading-3 mb-3 text-gray-900">Compliance Complexity</h3>
          <p class="text-body text-gray-600">
            Florida COA regulations change constantly. Keeping up with state requirements, filing deadlines, and document retention is a full-time job.
          </p>
        </div>

        <div class="group p-8 rounded-3xl bg-white border border-gray-100 hover:border-primary-200 shadow-stripe-xs hover:shadow-stripe-lg transition-all duration-150 ease-stripe card-hover reveal">
          <div class="w-14 h-14 bg-yellow-100 rounded-2xl flex items-center justify-center mb-6 feature-icon">
            <svg class="w-7 h-7 text-yellow-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"/>
            </svg>
          </div>
          <h3 class="text-heading-3 mb-3 text-gray-900">Legacy Infrastructure</h3>
          <p class="text-body text-gray-600">
            Buildings from the 1970s-90s need careful maintenance tracking. Aging systems, structural reserves, and renovation planning require specialized attention.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- Florida Compliance Section -->
  <section id="compliance" class="section-padding bg-gradient-to-br from-primary-600 via-primary-700 to-primary-800 relative overflow-hidden">
    <div class="absolute inset-0 opacity-10 bg-dot-pattern"></div>

    <div class="relative container-wide">
      <div class="grid lg:grid-cols-2 gap-12 items-center">
        <div class="reveal">
          <div class="inline-flex items-center px-4 py-2 bg-white/20 backdrop-blur-sm rounded-full text-white text-sm font-semibold mb-6">
            Florida Compliance Built-In
          </div>
          <h2 class="text-heading-1-sm md:text-heading-1 text-white mb-6 text-balance">
            Stay on the Right Side of Florida Law
          </h2>
          <p class="text-body-lg text-primary-100 mb-8">
            Florida's condo laws keep changing. HB 1021, HB 913, reserve requirements, structural inspections—it's a lot to track. CenturySync handles compliance deadlines so you can focus on your community, not legal fine print.
          </p>
          <ul class="space-y-4">
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-green-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
              <span class="text-white"><strong>HB 1021 & HB 913 Ready</strong> — Tools to help you stay organized for Florida's latest condo law requirements</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-green-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
              <span class="text-white"><strong>Smart Deadline Reminders</strong> — Never miss a filing deadline, insurance renewal, or required notice</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-green-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
              <span class="text-white"><strong>Audit-Ready Records</strong> — All your documents organized and accessible when you need them</span>
            </li>
            <li class="flex items-start gap-3">
              <svg class="w-6 h-6 text-green-400 flex-shrink-0 mt-0.5" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>
              <span class="text-white"><strong>Reserve Study Tracking</strong> — Store and monitor your structural reserve requirements</span>
            </li>
          </ul>
        </div>
        <div class="reveal">
          <div class="glass-dark rounded-3xl p-8 text-center shadow-stripe-xl">
            <div class="text-6xl mb-4">&#9878;&#65039;</div>
            <h3 class="text-heading-2-sm md:text-heading-3 text-white mb-4">Don't Risk Non-Compliance</h3>
            <p class="text-body text-primary-100 mb-6">Florida boards face increasing liability. New laws require proper documentation, structural inspections, and reserve funding. We help you stay compliant without the stress.</p>
            <a href="#demo" class="inline-flex items-center px-6 py-3 bg-white text-primary-700 font-semibold rounded-full hover:bg-gray-50 transition-all duration-150 ease-stripe shadow-stripe-sm hover:shadow-stripe-md btn-shine">
              See How We Help
              <svg class="w-5 h-5 ml-2 transition-transform duration-150 ease-stripe group-hover:translate-x-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3"/></svg>
            </a>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Features Section -->
  <section id="features" class="section-padding bg-gradient-to-br from-gray-50 via-primary-50/30 to-accent-100/20 relative overflow-hidden">
    <div class="absolute top-0 right-0 w-1/2 h-full bg-gradient-to-l from-primary-100/20 to-transparent pointer-events-none"></div>

    <div class="relative container-wide">
      <div class="text-center max-w-3xl mx-auto mb-16 reveal">
        <div class="inline-flex items-center px-4 py-2 bg-primary-100 text-primary-700 rounded-full text-sm font-semibold mb-6">
          Purpose-Built Features
        </div>
        <h2 class="text-heading-1-sm md:text-heading-1 mb-6 text-balance">
          CenturySync Understands <span class="gradient-text">Your Community</span>
        </h2>
        <p class="text-body-lg text-gray-600">
          Every feature designed with Century Village's unique needs in mind.
        </p>
      </div>

      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 reveal-stagger">
        <!-- Feature 1 -->
        <div class="bg-white p-8 rounded-3xl border border-gray-100 shadow-stripe-xs hover:shadow-stripe-lg hover:border-primary-100 transition-all duration-150 ease-stripe card-hover reveal">
          <div class="w-12 h-12 bg-gradient-to-br from-primary-500 to-primary-600 rounded-2xl flex items-center justify-center mb-6 shadow-stripe-sm">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"/></svg>
          </div>
          <h3 class="text-heading-3 mb-3 text-gray-900">Unlimited Document Storage</h3>
          <p class="text-body-sm text-gray-600 mb-4">Store unlimited documents—bylaws, meeting minutes, financial reports, contracts. Upload by simply emailing them to your dedicated address.</p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li class="flex items-center"><svg class="w-4 h-4 text-green-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Upload via Email</li>
            <li class="flex items-center"><svg class="w-4 h-4 text-green-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>2,000 Scans Included</li>
          </ul>
        </div>

        <!-- Feature 2 -->
        <div class="bg-white p-8 rounded-3xl border border-gray-100 shadow-stripe-xs hover:shadow-stripe-lg hover:border-primary-100 transition-all duration-150 ease-stripe card-hover reveal">
          <div class="w-12 h-12 bg-gradient-to-br from-blue-500 to-blue-600 rounded-2xl flex items-center justify-center mb-6 shadow-stripe-sm">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8h2a2 2 0 012 2v6a2 2 0 01-2 2h-2v4l-4-4H9a1.994 1.994 0 01-1.414-.586m0 0L11 14h4a2 2 0 002-2V6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2v4l.586-.586z"/></svg>
          </div>
          <h3 class="text-heading-3 mb-3 text-gray-900">Owner Communication</h3>
          <p class="text-body-sm text-gray-600 mb-4">Reach every unit owner instantly. Send announcements and important notices via email and SMS. Every action is timestamped.</p>
          <ul class="space-y-2 text-sm text-gray-600">
            <li class="flex items-center"><svg class="w-4 h-4 text-green-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Email + SMS Delivery</li>
            <li class="flex items-center"><svg class="w-4 h-4 text-green-500 mr-2 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20"><path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/></svg>Full Audit Trail</li>
          </ul>
        </div>

        <!-- Feature 3 -->
