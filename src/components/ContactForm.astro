---
// Contact Form with n8n webhook integration
const webhookUrl = "https://nextgen.pocarles.com/webhook/centurysync-form";
---

<div class="bg-gradient-to-br from-gray-50 via-white to-primary-50/30 rounded-3xl p-6 sm:p-8 md:p-10 shadow-stripe-lg reveal">
  <form id="contact-form" class="space-y-5">
    <div class="grid md:grid-cols-2 gap-5">
      <div class="space-y-2">
        <label for="firstName" class="block text-sm font-semibold text-gray-700">First Name</label>
        <input
          type="text"
          id="firstName"
          name="firstName"
          required
          class="input-field"
          placeholder="Your first name"
        >
      </div>
      <div class="space-y-2">
        <label for="lastName" class="block text-sm font-semibold text-gray-700">Last Name</label>
        <input
          type="text"
          id="lastName"
          name="lastName"
          required
          class="input-field"
          placeholder="Your last name"
        >
      </div>
    </div>

    <div class="space-y-2">
      <label for="email" class="block text-sm font-semibold text-gray-700">Email Address</label>
      <input
        type="email"
        id="email"
        name="email"
        required
        class="input-field"
        placeholder="you@example.com"
      >
    </div>

    <div class="space-y-2">
      <label for="phone" class="block text-sm font-semibold text-gray-700">Phone Number</label>
      <input
        type="tel"
        id="phone"
        name="phone"
        class="input-field"
        placeholder="(561) 562-4300"
      >
    </div>

    <div class="grid md:grid-cols-2 gap-5">
      <div class="space-y-2">
        <label for="building" class="block text-sm font-semibold text-gray-700">Building Name</label>
        <input
          type="text"
          id="building"
          name="building"
          class="input-field"
          placeholder="e.g., Andover A"
        >
      </div>
      <div class="space-y-2">
        <label for="units" class="block text-sm font-semibold text-gray-700">Number of Units</label>
        <input
          type="number"
          id="units"
          name="units"
          min="1"
          class="input-field"
          placeholder="e.g., 48"
        >
      </div>
    </div>

    <div class="space-y-2">
      <label for="role" class="block text-sm font-semibold text-gray-700">Your Role</label>
      <div class="relative">
        <select
          id="role"
          name="role"
          class="input-field appearance-none pr-10 cursor-pointer"
        >
          <option value="">Select your role</option>
          <option value="president">Board President</option>
          <option value="vice-president">Vice President</option>
          <option value="treasurer">Treasurer</option>
          <option value="secretary">Secretary</option>
          <option value="director">Board Director</option>
          <option value="owner">Unit Owner</option>
          <option value="manager">Property Manager</option>
          <option value="other">Other</option>
        </select>
        <div class="pointer-events-none absolute inset-y-0 right-0 flex items-center pr-3">
          <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"/>
          </svg>
        </div>
      </div>
    </div>

    <div class="space-y-2">
      <label for="message" class="block text-sm font-semibold text-gray-700">Message (Optional)</label>
      <textarea
        id="message"
        name="message"
        rows="3"
        class="input-field resize-none"
        placeholder="Tell us about your association or any questions you have..."
      ></textarea>
    </div>

    <!-- Hidden field for webhook URL -->
    <input type="hidden" id="webhookUrl" value={webhookUrl}>

    <button
      type="submit"
      id="submit-btn"
      class="w-full px-8 py-4 bg-primary-600 text-white font-bold rounded-xl hover:bg-primary-700 transition-all duration-150 ease-stripe shadow-stripe-md hover:shadow-stripe-lg btn-shine disabled:opacity-50 disabled:cursor-not-allowed touch-target"
    >
      <span id="btn-text">Request My Demo</span>
      <svg id="btn-spinner" class="hidden w-5 h-5 mx-auto animate-spin" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
    </button>

    <!-- Success Message -->
    <div id="success-message" class="hidden p-5 bg-green-50 border border-green-200 rounded-xl transform transition-all duration-300 ease-stripe">
      <div class="flex items-center justify-center gap-3 text-green-700 font-semibold">
        <div class="w-8 h-8 bg-green-100 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
          </svg>
        </div>
        <span>Thank you! We'll be in touch soon.</span>
      </div>
    </div>

    <!-- Error Message -->
    <div id="error-message" class="hidden p-5 bg-red-50 border border-red-200 rounded-xl transform transition-all duration-300 ease-stripe">
      <div class="flex items-center justify-center gap-3 text-red-700 font-semibold">
        <div class="w-8 h-8 bg-red-100 rounded-full flex items-center justify-center">
          <svg class="w-5 h-5 text-red-600" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7 4a1 1 0 11-2 0 1 1 0 012 0zm-1-9a1 1 0 00-1 1v4a1 1 0 102 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
          </svg>
        </div>
        <span>Something went wrong. Please try again or call us at (561) 562-4300.</span>
      </div>
    </div>

    <p class="text-center text-sm text-gray-500">
      We'll never share your information. See our <a href="/privacy-policy" class="text-primary-600 hover:text-primary-700 hover:underline transition-colors duration-150 ease-stripe">Privacy Policy</a>.
    </p>
  </form>
</div>

<script is:inline>
  document.getElementById('contact-form').addEventListener('submit', async function(e) {
    e.preventDefault();

    const form = e.target;
    const submitBtn = document.getElementById('submit-btn');
    const btnText = document.getElementById('btn-text');
    const btnSpinner = document.getElementById('btn-spinner');
    const successMsg = document.getElementById('success-message');
    const errorMsg = document.getElementById('error-message');
    const webhookUrl = document.getElementById('webhookUrl').value;

    // Hide any previous messages
    successMsg.classList.add('hidden');
    errorMsg.classList.add('hidden');

    // Disable submit button and show spinner
    submitBtn.disabled = true;
    btnText.classList.add('hidden');
    btnSpinner.classList.remove('hidden');

    // Collect form data
    const formData = {
      firstName: form.firstName.value,
      lastName: form.lastName.value,
      email: form.email.value,
      phone: form.phone.value,
      building: form.building.value,
      units: form.units.value ? parseInt(form.units.value, 10) : null,
      role: form.role.value,
      message: form.message.value,
      source: 'centurysync.com',
      submittedAt: new Date().toISOString()
    };

    try {
      // POST JSON to n8n webhook (supports CORS)
      const response = await fetch(webhookUrl, {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify(formData)
      });

      if (response.ok) {
        successMsg.classList.remove('hidden');
        form.reset();
      } else {
        throw new Error('Server responded with error');
      }
    } catch (error) {
      console.error('Form submission error:', error);
      errorMsg.classList.remove('hidden');
    } finally {
      submitBtn.disabled = false;
      btnText.classList.remove('hidden');
      btnSpinner.classList.add('hidden');
    }
  });
</script>
