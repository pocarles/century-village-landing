      <!-- Product Links -->
      <div>
        <h4 class="font-semibold text-white mb-4">Product</h4>
        <ul class="space-y-3">
          <li><a href={`${import.meta.env.BASE_URL}/#features`} class="text-gray-400 hover:text-white transition-colors duration-150 ease-stripe">Features</a></li>
          <li><a href={`${import.meta.env.BASE_URL}/#pricing`} class="text-gray-400 hover:text-white transition-colors duration-150 ease-stripe">Pricing</a></li>
