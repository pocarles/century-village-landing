---
const navLinks = [
  { href: "/#features", label: "Features" },
  { href: "/#how-it-works", label: "How It Works" },
  { href: "/#testimonials", label: "Testimonials" },
  { href: "/#pricing", label: "Pricing" },
  { href: "/changelog", label: "Changelog" },
  { href: "/resources/survival-guide", label: "Resources" },
];
---

<nav class="fixed top-0 left-0 right-0 z-50 glass">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex items-center justify-between h-16 md:h-20">
      <!-- Logo -->
      <a href="/" class="flex items-center space-x-2">
        <img src={`${import.meta.env.BASE_URL}logo.png`} alt="CenturySync" class="w-10 h-10" />
        <span class="text-xl font-bold">
          <span class="text-primary-600">Century</span><span class="text-gray-800">Sync</span>
        </span>
      </a>

      <!-- Desktop Menu -->
      <div class="hidden lg:flex items-center space-x-6">
        {navLinks.map(link => (
          <a href={link.href} class="text-gray-600 hover:text-primary-600 transition-colors font-medium text-sm">
            {link.label}
          </a>
        ))}
      </div>

      <!-- CTA Buttons -->
      <div class="flex items-center space-x-3">
        <!-- Member Sign-in Button -->
        <a
          href="https://centurysync.net"
          target="_blank"
          rel="noopener noreferrer"
          class="hidden sm:inline-flex items-center px-4 py-2 bg-white text-primary-600 font-semibold rounded-full border-2 border-primary-600 hover:bg-primary-50 transition-all text-sm"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          Member Sign-in
        </a>

        <!-- Request Demo Button -->
        <a href="/#demo" class="hidden sm:inline-flex items-center px-5 py-2.5 bg-primary-600 text-white font-semibold rounded-full hover:bg-primary-700 transition-all btn-shine text-sm">
          Request Demo
        </a>

        <!-- Mobile menu button -->
        <button id="mobile-menu-btn" class="lg:hidden p-2 rounded-lg hover:bg-gray-100 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </div>

  <!-- Mobile Menu -->
  <div id="mobile-menu" class="hidden lg:hidden glass border-t border-gray-100">
    <div class="px-4 py-4 space-y-3">
      {navLinks.map(link => (
        <a href={link.href} class="block py-2 text-gray-600 hover:text-primary-600 font-medium">
          {link.label}
        </a>
      ))}
      <div class="pt-3 border-t border-gray-200 space-y-3">
        <a
          href="https://centurysync.net"
          target="_blank"
          rel="noopener noreferrer"
          class="flex items-center py-2 text-primary-600 font-semibold"
        >
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"/>
          </svg>
          Member Sign-in
        </a>
        <a href="/#demo" class="block py-2 text-primary-600 font-semibold">Request Demo</a>
      </div>
    </div>
  </div>
</nav>

<script is:inline>
  // Mobile menu toggle
  const mobileMenuBtn = document.getElementById('mobile-menu-btn');
  const mobileMenu = document.getElementById('mobile-menu');

  if (mobileMenuBtn && mobileMenu) {
    mobileMenuBtn.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });

    // Close mobile menu when clicking a link
    mobileMenu.querySelectorAll('a').forEach(link => {
      link.addEventListener('click', () => {
        mobileMenu.classList.add('hidden');
      });
    });
  }
</script>
